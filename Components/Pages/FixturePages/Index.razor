<PageTitle>Fixtures</PageTitle>

<h1>Fixtures</h1>

@if (isAuthenticated) {
    <a href="fixtures/create">Create New</a> 
    <span> | </span>
    <a href="fixtures/create">Download</a>
}

<div class="row">
    <div class="col-sm-8">
        <EditForm FormName="FilterFixtures" Model="Filter" method="post" class="form-inline" OnSubmit="FilterFixtures" Enhance>
            <div class="container mt-3">
                <div class="row gap-1 align-self-center">
                    <div class="col-sm-auto">
                        <label for="startDate">Start Date</label>
                        <InputDate id="startDate" @bind-Value="Filter!.StartDate" class="form-control"/>
                        @* <InputDate id="date" @bind-Value="Fixture.Date" class="form-control" />  *@
                    </div>
                    <div class="col-sm-auto">
                        <label for="endDate">End Date</label>
                        <InputDate id="endDate" @bind-Value="Filter!.EndDate" class="form-control"/> 
                    </div>
                    <div class="col-sm-auto align-self-center" >
                        <div class="d-inline p-1">
                            <label>Home</label>
                            <InputCheckbox id="ishome" @bind-Value="Filter!.IncludeHome" class="form-check-input"/>
                        </div>
                        <div class="d-inline p-1">
                            <label>Away</label>
                            <InputCheckbox id="isaway" @bind-Value="Filter!.IncludeAway" class="form-check-input"/>  
                        </div
                    </div>
                    <div class="col-sm-auto align-self-center">
                        <button type="submit" value="Filter" class="btn btn-sm btn-primary">Filter</button>
                        <a class="btn btn-sm btn-outline-dark">Reset</a>
                    </div>
                </div>
            </div>
        </EditForm>
    </div>

</div>

<hr/>
<div class="mt-2">
    <FixtureGrid CanEdit="@isAuthenticated" Fixtures="@fixturesVM" TeamHidden="false"/>
</div>

