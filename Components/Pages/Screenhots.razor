@page "/screenshots"

<style>
    .lightbox-wrapper {
        position: relative;
    }

    .lightbox-toggle {
        display: none;
    }

    .lightbox-toggle:checked ~ .lightbox {
        display: flex;
    }

    .lightbox {
        display: none;
        position: fixed;
        z-index: 1050;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.85);
        justify-content: center;
        align-items: center;
    }

    .lightbox img {
        max-width: 90%;
        max-height: 90%;
        border-radius: 8px;
        box-shadow: 0 0 20px rgba(255,255,255,0.3);
    }

    .lightbox-close {
        position: absolute;
        top: 2rem;
        right: 2rem;
        font-size: 2rem;
        color: white;
        text-decoration: none;
        cursor: pointer;
    }

    .card-img-top {
        cursor: pointer;
        transition: transform 0.2s ease;
    }

    .card-img-top:hover {
        transform: scale(1.02);
    }
</style>

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold">FixtureManagement Screenshots</h1>
        <p class="lead text-muted">Click any image to view it full-size in a CSS-powered lightbox.</p>
    </div>

    <div class="row g-4">
        @foreach (var image in ScreenshotImages)
        {
            <div class="col-md-6 col-lg-4">
                <div class="lightbox-wrapper">
                    <input type="checkbox" class="lightbox-toggle" id="toggle@image.Id" />
                    
                    <div class="card shadow-sm">
                        <label for="toggle@image.Id">
                            <img src="@image.Url" class="card-img-top" alt="@image.AltText">
                        </label>
                        <div class="card-body">
                            <p class="card-text">@image.Caption</p>
                        </div>
                    </div>

                    <div class="lightbox">
                        <label for="toggle@image.Id" class="lightbox-close">&times;</label>
                        <img src="@image.Url" alt="@image.AltText">
                    </div>
                </div>
            </div>
        }
    </div>
</div>

